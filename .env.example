# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_IDS=123456789,987654321

# GitHub Configuration
GITHUB_MCP_SERVER_URL=http://localhost:3000/mcp

# Database Configuration
# Option 1: Use DATABASE_URL (recommended)
DATABASE_URL=postgresql://user:password@localhost:5432/telegit

# Option 2: Use individual POSTGRES_* variables (these take precedence over DATABASE_URL)
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=telegit
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=your_password

# Security Configuration
ENCRYPTION_KEY=your_32_byte_hex_encryption_key_here_64_chars

# LLM Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7

# Application Configuration
NODE_ENV=development
LOG_LEVEL=info
RATE_LIMIT_MAX_CONCURRENT=5
RATE_LIMIT_MIN_TIME=1000
